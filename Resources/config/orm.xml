<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="doctrine_user.user_object.class">Bundle\DoctrineUserBundle\Entity\User</parameter>
        <parameter key="doctrine_user.group_object.class">Bundle\DoctrineUserBundle\Entity\Group</parameter>
        <parameter key="doctrine_user.permission_object.class">Bundle\DoctrineUserBundle\Entity\Permission</parameter>
    </parameters>

    <services>

        <service id="doctrine_user.user_repository" class="Bundle\DoctrineUserBundle\DoctrineUserBundle" shared="true" factory-method="getRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%doctrine_user.user_object.class%</argument>
        </service>

        <service id="doctrine_user.group_repository" class="Bundle\DoctrineUserBundle\DoctrineUserBundle" shared="true" factory-method="getRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%doctrine_user.group_object.class%</argument>
        </service>

        <service id="doctrine_user.permission_repository" class="Bundle\DoctrineUserBundle\DoctrineUserBundle" shared="true" factory-method="getRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%doctrine_user.permission_object.class%</argument>
        </service>

    </services>

</container>
