<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="doctrine_user_user_list" pattern="/list">
        <default key="_controller">doctrine_user.user_controller:listAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_new" pattern="/new">
        <default key="_controller">doctrine_user.user_controller:newAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_create" pattern="/new">
        <default key="_controller">doctrine_user.user_controller:createAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="doctrine_user_user_send_confirmation_email" pattern="/send-confirmation-email">
        <default key="_controller">doctrine_user.user_controller:sendConfirmationEmailAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_check_confirmation_email" pattern="/check-confirmation-email">
        <default key="_controller">doctrine_user.user_controller:checkConfirmationEmailAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_confirm" pattern="/confirm/:token">
        <default key="_controller">doctrine_user.user_controller:confirmAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_confirmed" pattern="/confirmed">
        <default key="_controller">doctrine_user.user_controller:confirmedAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_show" pattern="/:username">
        <default key="_controller">doctrine_user.user_controller:showAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_edit" pattern="/:username/edit">
        <default key="_controller">doctrine_user.user_controller:editAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_update" pattern="/:username/edit">
        <default key="_controller">DoctrineUserBundle:User:updateAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="doctrine_user_user_delete" pattern="/:username/delete">
        <default key="_controller">doctrine_user.user_controller:deleteAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_change_password" pattern="/change-password">
        <default key="_controller">doctrine_user.user_controller:changePasswordAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_user_change_password_update" pattern="/change-password">
        <default key="_controller">doctrine_user.user_controller:changePasswordAction</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
