<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="doctrine_user_group_list" pattern="/list">
        <default key="_controller">doctrine_user.controller.group:listAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_group_new" pattern="/new">
        <default key="_controller">doctrine_user.controller.group:newAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_group_create" pattern="/new">
        <default key="_controller">doctrine_user.controller.group:createAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="doctrine_user_group_edit" pattern="/:name/edit">
        <default key="_controller">doctrine_user.controller.group:editAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_group_update" pattern="/:name/edit">
        <default key="_controller">doctrine_user.controller.group:updateAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="doctrine_user_group_delete" pattern="/:name/delete">
        <default key="_controller">doctrine_user.controller.group:deleteAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="doctrine_user_group_show" pattern="/:name">
        <default key="_controller">doctrine_user.controller.group:showAction</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
